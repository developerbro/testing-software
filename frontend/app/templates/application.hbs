<div class="container">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                {{#link-to 'index' class="navbar-brand"}}Testware{{/link-to}}
            </div>

            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {{#link-to 'index' tagName="li"}}<a>Home</a>{{/link-to}}
                    {{#link-to 'secret' tagName="li"}}<a>Secret</a>{{/link-to}}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {{#if session.isLoggedin}}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            {{format-name session.name}} <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {{#link-to 'profile' tagName="li"}}<a>Profile</a>{{/link-to}}
                            <li class="divider"></li>
                            <li><a {{action 'logout'}}>Logout</a></li>
                        </ul>
                    </li>
                    {{else}}
                        {{#link-to 'register' tagName="li"}}<a>Register</a>{{/link-to}}
                        {{#link-to 'login' tagName="li"}}<a>Login</a>{{/link-to}}
                    {{/if}}
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    {{outlet}}
</div>
