<div class="col-md-8">
    <h3>New Quiz</h3>
    <form role="form">
        <button class="btn btn-primary" {{action 'save'}}>Save</button>
        <button class="btn btn-warning" {{action 'cancel'}}>Cancel</button><br><br>
        <div class="form-group">
            {{input type="text" value=title placeholder="quiz title..." class="form-control"}}
        </div>
        <div class="form-group">
            {{textarea value=question rows=6 placeholder="question..." class="form-control"}}
        </div>

        <input type="radio" name="answer" value="answer" checked>Answer 1 <br>
        <input type="radio" name="answer" value="answer">Answer 2<br>
        <input type="radio" name="answer" value="answer">Answer 3<br>
        <input type="radio" name="answer" value="answer">Answer 4<br>
        <input type="radio" name="answer" value="answer">Answer 5

    </form>
</div>

