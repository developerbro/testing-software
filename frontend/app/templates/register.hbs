<div class="row">
<div class="col-md-4 col-md-offset-4">
<form class="form-signin" role="form" {{action 'register' on='submit'}}>
    <h2 class="form-register-heading">User Registration</h2>
    {{input type="text" value=username  placeholder="user name..." class="form-control"}}
    {{input type="email" value=useremail  placeholder="email..." class="form-control middle"}}
    {{input type="password" value=userpass placeholder="password..." class="form-control middle"}}
    {{input type="password" value=userpassconfirm placeholder="repeat password..." class="form-control bottom"}}
    <button class="btn btn-lg btn-primary btn-block" type='submit'>Register</button>
</form>
</div>
</div>
